<odoo>
	<data>
		<!-- VIEW FOR THE OBJECT : sale_workflow_process -->
		<record id="sale_auto_work_flow_process" model="ir.ui.view">
			<field name="name">sale_automic_workflow.sale_workflow_process.view_form
			</field>
			<field name="model">sale.workflow.process.ept</field>
			<field name="inherit_id"
				ref="auto_invoice_workflow_ept.sale_workflow_process_view_form" />
				
			<field name="arch" type="xml">
			<xpath expr="//form/sheet/group" position="before">
				<div class="oe_right oe_button_box">
				<button type="object" name="view_payment_methods" class="oe_inline oe_stat_button"
					icon="fa-tasks">
					<field name="payment_methods_count" widget="statinfo" string="Payment Methods" />
				</button>
				</div>
			
				</xpath>
				<!-- <field name="invoice_policy" position="after">
					<field name="payment_method_ids"></field>
				</field> -->
			</field>
		</record>
	</data>
</odoo>